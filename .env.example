# IDSS Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
PORT=8000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://idss_user:your_password@localhost:5432/idss_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=idss_db
DATABASE_USER=idss_user
DATABASE_PASSWORD=your_secure_password

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security Settings
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Railway Integration Settings
RAILWAY_API_ENDPOINT=https://api.indianrailways.gov.in
RAILWAY_API_KEY=your_railway_api_key
RAILWAY_SECTION_ID=your_section_id

# AI/ML Configuration
MODEL_PATH=./models/
PREDICTION_CONFIDENCE_THRESHOLD=0.85
OPTIMIZATION_ALGORITHM=genetic_algorithm

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/idss.log
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=300
WORKER_PROCESSES=4

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@domain.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_RECIPIENTS=admin@railways.gov.in,operator@railways.gov.in

# External Services
WEATHER_API_KEY=your_weather_api_key
TRAFFIC_API_KEY=your_traffic_api_key

# Development Settings
MOCK_DATA_ENABLED=true
DEMO_MODE=true
TESTING_MODE=false